<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the SeekBar (unfilled portion) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <stroke android:color="@android:color/darker_gray" android:width="2dp" /> <!-- Gray border -->
        </shape>
    </item>

    <!-- Progress of the SeekBar (filled portion) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#EBEBEB" /> <!-- Transparent gray color for progress -->
                <corners android:radius="10dp" /> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>


